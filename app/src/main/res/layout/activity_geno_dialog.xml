<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popupmain"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:layout_margin="20dp">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/form_bg_color"
        android:layout_margin="2dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="Add Relation"
            android:id="@+id/titleTextView"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/header_text_color"
            android:textStyle="bold"
            android:layout_weight="0" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/body_bg_color"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="6dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|center_horizontal"
                android:orientation="vertical"
                android:layout_weight="1"
                android:padding="3dp">
                <ScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/scrollView2"
                    android:background="@color/body_bg_color"
                    android:layout_weight="1"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="2dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginBottom="3dp"
                        android:background="@drawable/lightbackground"
                        android:baselineAligned="true">

                        <TextView
                            android:id="@+id/relationTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Relationship to X"
                            android:gravity="center_vertical|left"
                            android:layout_weight="0"
                            android:textColor="@color/body_text_color" />

                        <RadioGroup
                            android:id="@+id/radioRelation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" >

                            <RadioButton
                                android:id="@+id/radioParent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Parent"
                                android:checked="true" />

                            <RadioButton
                                android:id="@+id/radioSibling"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sibling" />

                            <RadioButton
                                android:id="@+id/radioSpouse"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Spouse" />

                            <RadioButton
                                android:id="@+id/radioChild"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Child" />
                        </RadioGroup>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Full Name"
                            android:gravity="center_vertical|left"
                            android:layout_weight="0"
                            android:textColor="@color/body_text_color" />

                        <EditText
                            android:id="@+id/fullNameET"
                            android:hint="Full Name"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_weight="0"
                            android:ems="10"
                            android:gravity="top|left"
                            android:inputType="text"
                            android:layout_margin="3dp"
                            android:selectAllOnFocus="true"
                            android:maxLines="1"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sex"
                            android:gravity="center_vertical|left"
                            android:layout_weight="0"
                            android:textColor="@color/body_text_color" />

                        <RadioGroup
                            android:id="@+id/radioSex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" >

                            <RadioButton
                                android:id="@+id/radioMale"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Male"
                                android:checked="true" />

                            <RadioButton
                                android:id="@+id/radioFemale"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Female" />

                        </RadioGroup>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Age"
                            android:gravity="center_vertical|left"
                            android:layout_weight="0"
                            android:textColor="@color/body_text_color" />

                        <EditText
                            android:id="@+id/ageET"
                            android:hint="Age"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_weight="0"
                            android:ems="10"
                            android:gravity="top|left"
                            android:inputType="number"
                            android:layout_margin="3dp"
                            android:selectAllOnFocus="true"
                            android:maxLines="1"
                            android:maxLength="3"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Occupation"
                            android:gravity="center_vertical|left"
                            android:layout_weight="0"
                            android:textColor="@color/body_text_color" />

                        <EditText
                            android:id="@+id/occupationET"
                            android:hint="Occupation"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_weight="0"
                            android:ems="10"
                            android:gravity="top|left"
                            android:inputType="text"
                            android:layout_margin="3dp"
                            android:selectAllOnFocus="true"
                            android:maxLines="1"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Salary"
                            android:gravity="center_vertical|left"
                            android:layout_weight="0"
                            android:textColor="@color/body_text_color" />

                        <EditText
                            android:id="@+id/salaryET"
                            android:hint="Salary"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_weight="0"
                            android:ems="10"
                            android:gravity="top|left"
                            android:inputType="text"
                            android:layout_margin="3dp"
                            android:selectAllOnFocus="true"
                            android:maxLines="1"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Illness"
                            android:gravity="center_vertical|left"
                            android:layout_weight="0"
                            android:textColor="@color/body_text_color" />

                        <EditText
                            android:id="@+id/illnessET"
                            android:hint="Illness"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_weight="0"
                            android:ems="10"
                            android:gravity="top|left"
                            android:inputType="text"
                            android:layout_margin="3dp"
                            android:selectAllOnFocus="true"
                            android:maxLines="1"/>
                    </LinearLayout>
                </ScrollView>>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="0"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" >

                <Button
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:id="@+id/cancelButton"
                    android:layout_weight="1" />

                <Button
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Arrived"
                    android:id="@+id/button3"
                    android:layout_weight="1"
                    android:visibility="invisible" />

                <Button
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:id="@+id/saveButton"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>