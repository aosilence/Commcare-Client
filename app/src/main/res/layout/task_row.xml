<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout2"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#000000"
    android:orientation="horizontal"
    android:padding="1dp">

<!--    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">-->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:id="@+id/border">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                android:id="@+id/details"
                android:background="@color/body_bg_color">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/TextView07"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0"
                            android:ems="10"
                            android:gravity="left|top"
                            android:text="Created Date"
                            android:textColor="#a3a4a5"
                            android:textSize="8sp"
                            android:padding="2dp"
                            android:layout_margin="1dp" />

                        <View
                            android:layout_width="2dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="0"
                            android:background="@color/body_grid_color" />

                        <TextView
                            android:id="@+id/row_created"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:gravity="center_vertical|left"
                            android:textColor="@color/body_text_color"
                            android:textSize="15sp"
                            android:padding="2dp"
                            android:layout_margin="1dp" />
                    </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/TextView06"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:ems="10"
                        android:gravity="left|top"
                        android:text="Resident"
                        android:textColor="#a3a4a5"
                        android:textSize="8sp"
                        android:padding="2dp"
                        android:layout_margin="1dp" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="0"
                        android:background="@color/body_grid_color" />

                    <TextView
                        android:id="@+id/row_resident"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="center_vertical|left"
                        android:textColor="@color/body_text_color"
                        android:textSize="15sp"
                        android:padding="2dp"
                        android:layout_margin="1dp" />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#eeeeee">

                        <TextView
                            android:id="@+id/TextView04"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0"
                            android:ems="10"
                            android:gravity="left|top"
                            android:text="Contact No."
                            android:textColor="#a3a4a5"
                            android:textSize="8sp"
                            android:padding="2dp"
                            android:layout_margin="1dp" />

                        <View
                            android:layout_width="2dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="0"
                            android:background="@color/body_grid_color" />

                        <TextView
                            android:id="@+id/row_contact"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:gravity="center_vertical|left"
                            android:textColor="@color/body_text_color"
                            android:textSize="15sp"
                            android:padding="2dp"
                            android:layout_margin="1dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#eeeeee">

                    <TextView
                        android:id="@+id/TextView05"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:ems="10"
                        android:gravity="left|top"
                        android:text="Address"
                        android:textColor="#a3a4a5"
                        android:textSize="8sp"
                        android:padding="2dp"
                        android:layout_margin="1dp" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="0"
                        android:background="@color/body_grid_color" />

                    <TextView
                        android:id="@+id/row_address"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="center_vertical|left"
                        android:textColor="@color/body_text_color"
                        android:textSize="15sp"
                        android:padding="2dp"
                        android:layout_margin="1dp"
                        android:layout_height="50dp" />
                </LinearLayout>


            </LinearLayout>

            <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:background="@color/body_grid_color" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="70dp"
                android:layout_height="fill_parent"
                android:background="@color/body_bg_color">

                <TextView
                    android:id="@+id/row_status"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0"
                    android:ems="10"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp"
                    android:layout_margin="2dp" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <!--    </LinearLayout>-->

</LinearLayout>