<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popupmain"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0"
    android:orientation="vertical"
    android:layout_margin="20dp">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@color/form_bg_color"
        android:layout_margin="2dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="Genogram Preview"
            android:id="@+id/titleTextView"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/header_text_color"
            android:textStyle="bold"
            android:layout_weight="0" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/body_bg_color"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="6dp"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@color/body_text_color"
                android:layout_weight="0">

                <LinearLayout
                    android:id="@+id/layout1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:background="@color/body_bg_color"
                    android:layout_margin="5dp"></LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="0"
                android:background="@color/form_bg_color"
                android:dividerPadding="3dp"
                android:paddingTop="2dp">
                <Button
                    android:id="@+id/cancelButton"
                    android:layout_width="80dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@color/form_button_bg_color"
                    android:text="Cancel"
                    android:textColor="#000000"
                    android:textSize="15sp" />
                <Button
                    android:id="@+id/centerBtn"
                    android:layout_width="80dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@color/form_button_bg_color"
                    android:text="Preview Genogram"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:layout_marginLeft="2dp"
                    android:visibility="invisible"/>
                <Button
                    android:id="@+id/saveButton"
                    android:layout_width="80dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@color/form_button_bg_color"
                    android:text="Close"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:layout_marginLeft="2dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>